apiVersion: apps/v1
kind: Deployment
metadata:
  name: dotnet
  namespace: yasmeen
  labels:
    app: myapp
spec:
  replicas: 2
  strategy:
    rollingUpdate:
      maxSurge: 50
      maxUnavailable: 50
    type: RollingUpdate
  selector:
    matchLabels:
      app: myapp
  template:
    metadata:
      labels:
        app: myapp
      containers:
      - name: myapp
        image: probe1.azurecr.io/dotnet-1-web
        ports:
        - containerPort: 80
        resources:
          limits:
            cpu: "200m"
            memory: "300Mi"
          requests:
            cpu: "100m"
            memory: "300Mi"
        livenessProbe:
          exec:
            command:
            - ls
          initialDelaySeconds: 5
          periodSeconds: 5
          failureThreshold: 3
          successThreshold: 1
        readinessProbe:
          exec:
            command:
            - ls
          initialDelaySeconds: 5
          periodSeconds: 10
          failureThreshold: 3
          successThreshold: 1
          timeoutSeconds: 2
      imagePullSecrets:
        - name: 



